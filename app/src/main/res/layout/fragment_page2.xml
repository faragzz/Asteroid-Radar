<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    tools:context=".FragmentPage2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asteroid Radar"
        android:textStyle="bold"
        android:textColor ="#000"
        android:textSize="30sp"
        android:paddingBottom="5dp"
        />
    <ImageView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>
    <TextView
        android:id = "@+id/closeApproachDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor ="#000"
        android:text="Close Approach Date"/>

    <TextView
        android:id = "@+id/infoDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:textColor ="#000"
        android:text="info"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/absoluteMagnitude"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor ="#000"
            android:text="Absolute Magnitude"/>
        <ImageView
            android:paddingTop="15sp"
            android:id="@+id/help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/help"
            />
    </LinearLayout>
    <TextView
        android:id = "@+id/infoAbsoluteMagnitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor ="#000"
        android:text="info"/>
    <TextView
        android:id = "@+id/estimateDiameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor ="#000"
        android:text="Estimate Diameter"/>
    <TextView
        android:id = "@+id/infoEstimateDiameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor ="#000"
        android:text="info"/>
    <TextView
        android:id = "@+id/relativeVelocity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor ="#000"
        android:text="Relative Velocity"/>
    <TextView
        android:id = "@+id/infoRelativeVelocity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor ="#000"
        android:text="info"/>
    <TextView
        android:id = "@+id/distanceFromEarth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor ="#000"
        android:text="Distance from earth"/>
    <TextView
        android:id = "@+id/infoDistanceFromEarth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor ="#000"
        android:text="info"/>

</LinearLayout>